<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.angzhao.dao.homeImgDao">
    <insert id="insertHomeImg" parameterType="com.angzhao.entity.homeImgEntity">
        INSERT INTO home_img(homeimg_id,homeimg_img)
        VALUES (#{homeImgId},#{homeImgPath})
    </insert>

    <delete id="deleteHomeImg" parameterType="java.lang.String">
        DELETE FROM home_img
        WHERE homeimg_id = #{homeImgId}
    </delete>

    <update id="updateHomeImg" parameterType="com.angzhao.entity.homeImgEntity">
        UPDATE home_img SET homeimg_id = #{homeImgId},homeimg_img = #{homeImgPath}
        WHERE homeimg_id = #{homeImgId}
    </update>

    <select id="queryAllImgName" parameterType="java.lang.String" resultType="com.angzhao.entity.homeImgEntity">
        SELECT homeimg_id FROM home_img
    </select>
</mapper>